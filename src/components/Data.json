                        "formula": "ct ≤ mt-1/(1 + πt) + τt",
                        "key_points": [
                            "Real money balances must cover consumption",
                            "Money must be held before transactions",
                            "Introduces monetary friction into the model"
                        ],
                        "importance": "Core mechanism linking money and real economy"
                    },
                    "Solution Characteristics": {
                        "key_equations": [
                            "it = μt+1/λt+1",
                            "uc = λ(1 + i)",
                            "Marginal utility > marginal value of income when i > 0"
                        ],
                        "implications": [
                            "Nominal interest rate acts as tax on consumption",
                            "Higher interest rates reduce consumption",
                            "Money has real effects through CIA constraint"
                        ]
                    }
                }
